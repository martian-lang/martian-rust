# A super-simple test pipeline with splits.

# Computes the sum of each value in a separate chunk, and
# sums the squares in the join phase.
stage SUM_SQUARES(
    in  float[] values,
    out float   sum,
    src comp    "sum_sq martian sum_squares",
) split (
    in  float   value,
    out float   square,
) using (
    mem_gb = 2,
)


call SUM_SQUARES(        
    values = [
        1,
        2,
        3,
    ],
)
